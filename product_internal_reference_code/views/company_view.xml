<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="view_company_form_inherit_internal_code_prefix">
            <field name="name">red.company.form.inherit.internal_code_prefix</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form" />
            <field name="priority" eval="20"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page name="prefix_internal_reference" string="Prefix Internal Reference">
                        <group>
                            <group>
                                <field name="internal_code_prefix" />
                            </group>
                            <group/>
                        </group>
                   </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
