<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="module_category_auction_sell" model="ir.module.category">
        <field name="name">Auction Seller</field>
        <field name="sequence">10</field>
    </record>
     <record id="group_auction_seller_user" model="res.groups">
        <field name="name">Auction Sell Participant</field>
        <field name="category_id" ref="auction_seller.module_category_auction_sell" />
        <field
            name="implied_ids"
            eval="[(4, ref('base_auction.group_auction_user'))]"
        />
    </record>
     <record id="group_auction_seller_manager" model="res.groups">
        <field name="name">Auction Sell Manager</field>
        <field name="category_id" ref="auction_seller.module_category_auction_sell" />
        <!-- We do not inherit group_auction_user here to avoid user type conflicts -->
        <field
            name="implied_ids"
            eval="[(4, ref('base_auction.group_auction_manager'))]"
        />
    </record>
</odoo>
